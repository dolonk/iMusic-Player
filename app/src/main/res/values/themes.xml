<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.iMusicPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#DA03D6</item>
        <item name="colorPrimaryVariant">#DA03D6</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="splash_screen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/s_plash</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!--    Background as well as text color for alert dialog buttons-->
    <attr name="dialogTextColor" format="color" />
    <attr name="dialogBtnBackground" format="color" />


